{
	"parser": "babel-eslint",
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		}
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["error", "tab"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"comma-dangle": 0,
		"react/jsx-uses-vars": 1,
		"react/display-name": 1,
		"no-unused-vars": "warn",
		"no-console": 1,
		"no-unexpected-multiline": "warn",
		"react/prop-types": "off",
		"react/no-unescaped-entities": "off"
	},
	"settings": {
		"react": {
			"pragma": "React",
			"version": "15.6.1"
		}
	}
}
